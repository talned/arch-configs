#!/bin/bash

# GitUI wrapper script with SSH agent setup
# Place this file at: /usr/local/bin/gitui
# Make it executable: chmod +x /usr/local/bin/gitui

# Start SSH agent if not already running
if [ -z "$SSH_AUTH_SOCK" ]; then
  eval "$(ssh-agent -s)" > /dev/null
fi

# Add your SSH key
ssh-add ~/.ssh/id_ed25519 2>/dev/null

# Launch gitui (use full path to avoid recursion)
/usr/bin/gitui "$@"

