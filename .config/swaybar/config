bar {
    position bottom
    font pango:monospace 16

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while echo "$(date +'| %x %A | %I:%M:%S %p |' | tr '[:lower:]' '[:upper:]') "; do sleep 1; done


    colors {
        statusline #ffffff
        background #000000
        inactive_workspace #ffffffff #000000ff #ffffff
    }
}