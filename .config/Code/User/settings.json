{
	// EXTENSIONS
	/*
	Color Highlight
	Github Copilot Chat
	Markdown Inline Editor
	Markdown Table
	Material Icon Theme
	Material Product Icons
	Simple Black Theme
	Vim
	vscode-gitui
	*/
	"workbench.startupEditor": "none",
	"workbench.colorTheme": "Simple Black Theme",
	"markdowntable.formatOnSave": true,
	"markdowntable.showMenu.csvToTable": true,
	"workbench.productIconTheme": "material-product-icons",
	"workbench.iconTheme": "material-icon-theme",
	"editor.mouseWheelZoom": true,
	"window.zoomLevel": 1.1,
	"editor.glyphMargin": false,
	"editor.formatOnSave": true,
	"workbench.colorCustomizations": {
		"statusBar.background": "#000000",
		"statusBar.noFolderBackground": "#000000",
		"titleBar.activeBackground": "#000000",
		"titleBar.inactiveBackground": "#000000",
		"titleBar.activeForeground": "#cbcbcb"
	},
	"editor.tabSize": 8,
	"editor.insertSpaces": false,
	"editor.renderLineHighlight": "all",
	"editor.fontFamily": "IBM Plex Mono",
	"editor.fontSize": 16,
	"editor.lineHeight": 2.5,
	"editor.letterSpacing": 0.5,
	"files.insertFinalNewline": true,
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1,
	"workbench.tips.enabled": false,
	"window.controlsStyle": "hidden",
	"window.menuBarVisibility": "hidden",
	"editor.minimap.enabled": false,
	"workbench.activityBar.location": "hidden",
	"window.commandCenter": false,
	"chat.agent.enabled": false,
	"editor.smoothScrolling": true,
	"editor.lightbulb.enabled": "off",
	"terminal.integrated.cursorBlinking": false,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorStyleInactive": "underline",
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
	"terminal.integrated.fontSize": 20,
	"terminal.integrated.customGlyphs": true,
	"breadcrumbs.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"git.openRepositoryInParentFolders": "never",
	"editor.detectIndentation": false,
	"editor.renderWhitespace": "none",
	"git.confirmSync": false,
	"workbench.editor.showTabs": "none",
	"extensions.ignoreRecommendations": true,
	"github.copilot.nextEditSuggestions.enabled": true,
	"github.copilot.enable": {
		"*": false
	},
	"workbench.sideBar.location": "right",
	"chat.extensionUnification.enabled": false,
	"chat.viewSessions.enabled": false,
	"editor.wordWrap": "on"
}
