[Unit]
Description=Polkit GNOME Authentication
After=wayland-wm@sway.service
PartOf=wayland-wm@sway.service
Wants=wayland-wm@sway.service

[Service]
Type=simple
ExecStart=/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=wayland-wm@sway.service
